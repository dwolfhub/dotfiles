[user]
	name = Daniel Wolf
	email = daniel.wolf@punchkickinteractive.com
[push]
	default = simple
[core]
	excludesfile = /Users/danielwolf/.gitignore_global
[rerere]
	enabled = 1
[merge]
        tool = sourcetree
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
        l = log --pretty=format:"%H%x09%an%x09%ad%x09%s" --date=short -n 100 
        a = add --all
        m = merge
        s = status
        d = diff
        pl = pull
        ps = push
        c = clone
        co = checkout
        cob = checkout -b
        com = commit -m
        coma = commit --amend -m
        t = tag -l
        b = branch
        r = remote -v
        psu = push -u origin HEAD
        
[color]
        ui = true
